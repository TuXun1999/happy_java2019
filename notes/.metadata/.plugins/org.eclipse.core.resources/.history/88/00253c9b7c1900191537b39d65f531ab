package Test_object;

public class Tax {
	public static void main(String[] args){
		double taxPercent = 0.2;
		
		double salaryDara = 65000;
		double bonusDara = 4850;
		
		double tax = (salaryDara + bonusDara) * taxPercent;
		System.out.println("THe tax for Dara is: " + tax);
		
		double salaryElaya = 99000;
		double bonusElaya = 4820;
		tax = (salaryElaya + bonusElaya) * taxPercent;
		System.out.println("THe tax for Elaya is: " + tax);
		
		double salaryBahrat = 45000;
		double bonusBahrat = 3820;
		
		tax = (salaryBahrat + bonusBahrat) * taxPercent;
		System.out.println("THe tax for Bahrat is: " + tax);
	}

}
