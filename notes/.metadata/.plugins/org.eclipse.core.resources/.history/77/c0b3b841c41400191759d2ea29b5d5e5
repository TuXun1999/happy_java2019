package loop;
import java.util.Scanner;


public class test_loop {
	public static void main(String[] args){
		Scanner user_input = new Scanner(System.in);
		String choice;
		boolean leave = false;
		while (leave == false){
			
			System.out.println("Which part do you want to see?");
			choice = user_input.next();
			int N = Integer.parseInt(args[0]);
			switch (choice){
				case "a":
					//Part I: print out a list 
					int num = 10;
					list(num);
					break;
				case "b":
					//Part II: power 
					System.out.println("Power: " + power(N));
					break;
				case "c":
					//Part III: print the largest 2 powers less than N
		
					System.out.println("Largest: " + max_power(N));
				case "q":
					leave = true;
					break;
				default:
				
			}
			if (leave)
				break;
			else
				continue;
			
		}
		
	
	}
	
	static void list(int num){
		while (num<= 50){
			System.out.println("Number: " + num);
			num ++;
		}
		
	}
	static int power(int N){
		int result = 1;
		while (N > 0){
			result *= 2;
			N --;
		}
		return result;
	}
	
	static int max_power(int N){
		int result = 1;
		while (result <= N){
			result *= 2;
		}
		return result/2;
	}
}
