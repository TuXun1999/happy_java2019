package Test_object;

public class Employee {
	Employee(double mysalary, double mybonus, double mypercent){
		salary = mysalary;
		bonus = mybonus;
		percent = mypercent;
	}
	double salary;
	double bonus;
	double percent;
	
	public double TaxCal(){ //A method inside a class; it can be used for any instance
		double tax = (salary + bonus) * percent;
		return tax;
	}
	

}
