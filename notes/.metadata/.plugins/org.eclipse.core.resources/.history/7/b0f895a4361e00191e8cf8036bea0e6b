package Datatype;

public class Datatype {
	public static void main(String[] args){
		Currency euro = new Currency("Euro", 1);
		Currency usd = new Currency("USD", 1/1.06);
		Currency pound= new Currency("Pound", 1/0.96);
		Currency yen = new Currency("Yen", 1/113.96);
		
		System.out.println("1000 Euro --> USD: " + euro.exchange(1000, usd));
		System.out.println("500 USD ---> Euro: " + usd.exchange(500, euro));
		System.out.println("641 Pound ----> Yen: " + pound.exchange(641, yen));
	}

}
